<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ganesh.expenseshare.ShareRide">

    <TextView
        android:id="@+id/textTotalDistance"
        android:layout_width="121dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Total Distance"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/editTextTotalDistance"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTotalDistance"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textTotalDistance"
        app:layout_constraintTop_toTopOf="@+id/textTotalDistance" />

    <TextView
        android:id="@+id/textViewTotalFare"
        android:layout_width="109dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="Total Fare"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textTotalDistance"
        app:layout_constraintTop_toBottomOf="@+id/textTotalDistance" />

    <EditText
        android:id="@+id/editTextTotalFare"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextTotalDistance"
        app:layout_constraintTop_toTopOf="@+id/textViewTotalFare" />

    <TextView
        android:id="@+id/textViewnopasgr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No. of Passengers"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textViewTotalFare"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalFare" />

    <EditText
        android:id="@+id/editTextPassngerCount"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextTotalFare"
        app:layout_constraintTop_toTopOf="@+id/textViewnopasgr" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="368dp"
        android:layout_height="231dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewnopasgr"
        app:layout_constraintVertical_bias="0.375">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonComputeShare"
        app:layout_constraintTop_toTopOf="@+id/buttonComputeShare" />

    <Button
        android:id="@+id/buttonComputeShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonReset"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
